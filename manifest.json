{
	"name": "CPS Tab Limiter",
	"description": "Manifest V3 port for Coweta Public Schools. Limits number of open tabs.",
	"version": "0.3.1",
	"author": "Matthias Vogt, Modified by Isaiah Jared",
	"homepage_url": "https://github.com/matthias-vogt/tab-limiter",

	"icons": {
		"48": "icons/48.png",
		"128": "icons/128.png"
	},

	"action": {
		"default_icon": {
			"48": "icons/48.png",
			"128": "icons/128.png"
		},
		"default_popup": "options.html",
		"default_title": "Tab Limiter"
	},
	"options_ui": "options.html",
	"background": {
		"service_worker": "background.js"
	},
	"permissions": [
		"storage"
	],
	"manifest_version": 3
}
